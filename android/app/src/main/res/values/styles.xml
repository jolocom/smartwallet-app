<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/main_black</item>
        <item name="android:windowBackground">@color/main_black</item>
        <!-- sets cursor color -->
        <item name="colorControlActivated">#5251c1</item>
        <!-- removes jump on splash screen -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- removes transition when we close camera screen -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

    </style>

    <!-- Add the following lines (BootTheme should inherit from AppTheme) -->
    <style name="BootTheme" parent="AppTheme">
        <!-- set the generated bootsplash.xml drawable as activity background -->
        <item name="android:background">@drawable/bootsplash</item>
        <item name="android:statusBarColor">@color/main_black</item>
    </style>

</resources>
